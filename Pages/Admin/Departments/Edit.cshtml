@page "{id:int?}"
@model ClarityDesk.Pages.Admin.Departments.EditModel
@{
    ViewData["Title"] = "編輯單位";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> 編輯問題所屬單位
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Input.Id" />

                        <!-- 基本資訊 -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Name" class="form-label">
                                    單位名稱 <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Input.Name" class="form-control" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">狀態</label>
                                <div class="form-check form-switch">
                                    <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" role="switch" />
                                    <label asp-for="Input.IsActive" class="form-check-label">
                                        @(Model.Input.IsActive ? "啟用" : "已停用")
                                    </label>
                                </div>
                                <small class="text-muted">
                                    停用後此單位將不會在回報單建立時顯示
                                </small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label">
                                單位說明
                            </label>
                            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <!-- 處理人員指派 -->
                        <div class="mb-3">
                            <label class="form-label">
                                指派處理人員
                            </label>
                            <div class="card">
                                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                                    @if (Model.AllUsers == null || !Model.AllUsers.Any())
                                    {
                                        <p class="text-muted mb-0">目前沒有可指派的使用者</p>
                                    }
                                    else
                                    {
                                        @foreach (var user in Model.AllUsers)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="selectedUserIds" value="@user.Id" 
                                                       id="user_@user.Id"
                                                       @(Model.SelectedUserIds.Contains(user.Id) ? "checked" : "") />
                                                <label class="form-check-label" for="user_@user.Id">
                                                    @user.DisplayName
                                                    <span class="badge bg-secondary">@user.Role</span>
                                                    @if (!user.IsActive)
                                                    {
                                                        <span class="badge bg-warning">已停用</span>
                                                    }
                                                </label>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <small class="text-muted">
                                選擇可處理此類型問題的人員
                            </small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> 返回列表
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> 儲存變更
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
