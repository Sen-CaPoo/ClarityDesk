@page
@model ClarityDesk.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "權限不足";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card mt-5">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation" style="font-size: 5rem; color: var(--danger-color);"></i>
                    </div>

                    <h2 class="card-title mb-3">權限不足</h2>
                    <p class="text-muted mb-4">
                        您沒有權限訪問此頁面。<br/>
                        請確認您的帳號權限或聯絡系統管理員。
                    </p>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>
                            回到首頁
                        </a>
                        <a href="/Account/Logout" class="btn btn-outline-secondary" asp-page-handler="Logout">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            登出
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        border: none;
    }

    body {
        background-color: #f5f7fa;
    }
</style>
