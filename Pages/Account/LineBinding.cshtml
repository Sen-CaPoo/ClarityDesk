@page
@model ClarityDesk.Pages.Account.LineBindingModel
@{
    ViewData["Title"] = "LINE 帳號綁定";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card mt-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-line me-2"></i>LINE 帳號綁定管理
                    </h4>
                </div>
                <div class="card-body p-4">
                    @* 顯示成功訊息 *@
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* 顯示錯誤訊息 *@
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* 訪客帳號提示 *@
                    @if (Model.IsGuestAccount)
                    {
                        <div class="alert alert-info" role="alert">
                            <h5 class="alert-heading">
                                <i class="bi bi-info-circle me-2"></i>訪客帳號限制
                            </h5>
                            <p class="mb-0">您目前使用的是訪客帳號,無法綁定 LINE 官方帳號。</p>
                            <hr>
                            <p class="mb-0 small">
                                若要使用 LINE 綁定功能,請先登出並使用 LINE 帳號重新登入。
                            </p>
                        </div>
                    }
                    else if (Model.Binding != null && Model.Binding.BindingStatus == ClarityDesk.Models.Enums.BindingStatus.Active)
                    {
                        @* 已綁定狀態 *@
                        <div class="binding-status-container mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="status-icon status-icon-success me-3">
                                    <i class="bi bi-check-lg"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0">已綁定 LINE 帳號</h5>
                                    <small class="text-muted">您可以在 LINE 接收回報單推送通知</small>
                                </div>
                            </div>

                            <div class="binding-details">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small">LINE 顯示名稱</label>
                                        <div class="fw-semibold">@Model.Binding.DisplayName</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small">綁定時間</label>
                                        <div class="fw-semibold">@Model.Binding.BoundAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small">最後互動時間</label>
                                        <div class="fw-semibold">
                                            @if (Model.Binding.LastInteractedAt.HasValue)
                                            {
                                                @Model.Binding.LastInteractedAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                            }
                                            else
                                            {
                                                <text>尚無互動記錄</text>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-muted small">綁定狀態</label>
                                        <div>
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>正常
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* 解除綁定按鈕 *@
                        <form method="post" asp-page-handler="Unbind" onsubmit="return confirm('確定要解除 LINE 帳號綁定嗎?解除後將無法接收推送通知。');">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bi bi-x-circle me-2"></i>解除綁定
                            </button>
                        </form>

                        <div class="mt-3">
                            <p class="text-muted small mb-0">
                                <i class="bi bi-info-circle me-1"></i>
                                解除綁定後,您將無法在 LINE 接收回報單通知,但系統帳號仍會保留。
                            </p>
                        </div>
                    }
                    else if (Model.Binding != null && Model.Binding.BindingStatus == ClarityDesk.Models.Enums.BindingStatus.Blocked)
                    {
                        @* 已封鎖狀態 *@
                        <div class="binding-status-container mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="status-icon status-icon-danger me-3">
                                    <i class="bi bi-x-lg"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 text-danger">LINE 帳號已封鎖</h5>
                                    <small class="text-muted">您已封鎖 LINE 官方帳號</small>
                                </div>
                            </div>

                            <div class="alert alert-warning" role="alert">
                                <h6 class="alert-heading">無法接收推送通知</h6>
                                <p class="mb-0 small">
                                    系統偵測到您已封鎖 ClarityDesk LINE 官方帳號,因此無法向您發送推送通知。
                                    若要恢復通知功能,請在 LINE 解除封鎖後重新綁定。
                                </p>
                            </div>

                            <form method="post" asp-page-handler="Bind">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-line me-2"></i>重新綁定 LINE 帳號
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        @* 未綁定狀態 *@
                        <div class="binding-status-container mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="status-icon status-icon-secondary me-3">
                                    <i class="bi bi-dash-lg"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0">尚未綁定 LINE 帳號</h5>
                                    <small class="text-muted">綁定後可在 LINE 接收回報單通知</small>
                                </div>
                            </div>

                            <div class="feature-list mb-4">
                                <h6 class="fw-semibold mb-3">綁定 LINE 帳號的好處</h6>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        即時接收新回報單通知
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        在 LINE 中直接查看回報單詳情
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        快速掌握待處理事項
                                    </li>
                                </ul>
                            </div>

                            <form method="post" asp-page-handler="Bind">
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="bi bi-line me-2"></i>綁定 LINE 帳號
                                </button>
                            </form>

                            <div class="mt-3">
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-shield-check me-1"></i>
                                    我們重視您的隱私,僅會儲存必要的 LINE 帳號資訊用於推送通知。
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="/Issues/Index" class="btn btn-link">
                    <i class="bi bi-arrow-left me-1"></i>返回回報單列表
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: var(--card-background);
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        border: none;
    }

    .card-header {
        border-top-left-radius: var(--border-radius);
        border-top-right-radius: var(--border-radius);
        border-bottom: none;
    }

    .status-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .status-icon-success {
        background-color: #d1f7e5;
        color: #198754;
    }

    .status-icon-danger {
        background-color: #fdd;
        color: #dc3545;
    }

    .status-icon-secondary {
        background-color: #e9ecef;
        color: #6c757d;
    }

    .binding-details {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
    }

    .feature-list li {
        padding-left: 0.5rem;
    }

    .btn-success {
        background-color: #06C755;
        border-color: #06C755;
        font-weight: 600;
    }

    .btn-success:hover {
        background-color: #05b04c;
        border-color: #05b04c;
    }

    .btn-outline-danger {
        font-weight: 600;
    }
</style>

@section Scripts {
    <script>
        // 自動關閉 alert
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert:not(.alert-info)');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
