{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ClarityDesk;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "LineLogin": {
    "ChannelId": "YOUR_LINE_LOGIN_CHANNEL_ID",
    "ChannelSecret": "YOUR_LINE_LOGIN_CHANNEL_SECRET",
    "CallbackPath": "/signin-line"
  },
  "LineSettings": {
    "ChannelId": "YOUR_LINE_BOT_CHANNEL_ID",
    "ChannelSecret": "YOUR_LINE_BOT_CHANNEL_SECRET",
    "ChannelAccessToken": "YOUR_LINE_CHANNEL_ACCESS_TOKEN",
    "BotBasicId": "YOUR_BOT_BASIC_ID",
    "WebhookPath": "/api/line/webhook",
    "CallbackPath": "/signin-line",
    "WebhookUrl": "https://your-domain.com/api/line/webhook",
    "BaseUrl": "https://your-domain.com",
    "SessionExpirationMinutes": 30,
    "MonthlyPushLimit": 500,
    "QuotaWarningThresholdPercent": 80,
    "QuotaErrorThresholdPercent": 95
  }
}
