{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=<server>;Database=ClarityDesk;User Id=<user>;Password=<password>;Encrypt=True;TrustServerCertificate=False;MultipleActiveResultSets=true"
  },
  "LineLogin": {
    "ChannelId": "YOUR_LINE_LOGIN_CHANNEL_ID",
    "ChannelSecret": "YOUR_LINE_LOGIN_CHANNEL_SECRET",
    "CallbackPath": "/signin-line"
  },
  "LineMessaging": {
    "ChannelId": "YOUR_LINE_MESSAGING_CHANNEL_ID",
    "ChannelAccessToken": "YOUR_LINE_CHANNEL_ACCESS_TOKEN",
    "ChannelSecret": "YOUR_LINE_MESSAGING_CHANNEL_SECRET",
    "BaseUrl": "https://yourapp.com",
    "WebhookPath": "/api/line/webhook",
    "ImageUploadPath": "wwwroot/uploads/line-images",
    "MaxImageSizeBytes": 10485760,
    "MaxImagesPerIssue": 3
  }
}
